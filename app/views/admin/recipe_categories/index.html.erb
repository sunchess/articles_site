<h1><%= t(".title") %></h1>

<table class="border" width="500px">
  <tr>
    <th width="50%"><%= t(".name") %></th>
    <th><%= t(".position") %></th>
    <th><%= t(".tools") %></th>
  </tr>
  <% @recipe_categories.each do | category | %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.position%></td>
      <td><%= link_to t(".edit"), edit_admin_recipe_category_path(category)%> </td>
    </tr>
  <% end %>
</table>
<br/>
<br/>
  <div>
    <%= form_for @recipe_category, :url => admin_recipe_categories_path do |f| %>
      <%= render "shared/error_messages", :target => @recipe_category %>
      <p>
        <%= f.label :name %>  <%= f.text_field :name %> <%= f.label :position %> <%= f.text_field :position, :size => 3 %>
      </p>
      
      <br/>
      <%= f.submit %>
    <% end %>
  </div>
