<% content_for :javascript do %>
<%= javascript_tag do %>
// Sorting the list

jQuery(function() {
  return $('#stores').sortable({
    axis: 'y',
    handle: '.handle',
    dropOnEmpty: false,
    cursor: 'crosshair',
    opacity: 0.4,
    scroll: true,
    update: function() {
      return $.post($(this).data('update-url'), $(this).sortable('serialize'));
    }
  });
});
<% end %>
<% end %>
