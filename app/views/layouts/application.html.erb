<!DOCTYPE html>
<html>
<head>
  <title><% if render_breadcrumbs(:full=>true).present?%>
    <%= "#{render_breadcrumbs(:no_html=>true, :separator => ' / ', :full=>true).html_safe} :: " %>
  <% end %>Text Engine</title>

  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= yield( :editor ) %>
  <%= csrf_meta_tag %>

</head>
<body>
  <div><%= render :partial => "layouts/users_login_register" %></div>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div style="float: right; width: 70%;">
    <%= render_breadcrumbs %>
    <%= yield %>
  </div>
  <div style="float: left; width: 300px;">
    <%= render :partial => "layouts/category", :collection => Category.all %>
  </div>
</body>
</html>
