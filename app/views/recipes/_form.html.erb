<%= semantic_form_for @recipe do |f| %>
  <%= f.inputs do %>
    <%= f.input :recipe_category_id, :required => true, :as => :select, :collection => RecipeCategory.all %>
    <%= f.input :user_name %>
    <%= f.input :title %>
    <%= f.input :body %>
    <% if can? :manage, Recipe %>
      <%= f.input :shown %>
    <% end %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button "Сохранить" %>
  <% end %>
<% end %>
