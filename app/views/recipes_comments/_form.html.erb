<%= semantic_form_for( [@recipe, @recipes_comment] ) do |f| %>
  <%= f.inputs  do %>
    <%= f.input :user_name %>
    <%= f.input :email %>
    <%= f.input :body, :input_html =>{:rows => 10, :style => "width: 72%"} %>
    <% if can? :edit, @recipes_comment %>
      <%= f.input :shown %>
    <% end %>
  <% end %>

  <%= f.submit @recipes_comment.new_record? ? "Добавить комментарий" : "Редактировать комментарий" %>

<% end %>
